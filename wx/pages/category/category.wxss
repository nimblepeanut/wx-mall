
/* 页面 */
page {
   height: 100%;
}

/* 整体 */
.whole {
   /* 分栏的容器高度=整个页面-最上面搜索框 */
   height: calc( 100vh - 90rpx);
   /* 伸缩盒子 */
   display: flex;
}

/* 左侧 开始 */

/* 整体 */
.left {
   flex: 2;
}

/* 分类名 */
.categoryName {
   height: 80rpx;
   display: flex;
   justify-content: center;
   align-items: center;
   font-size: 30rpx;
}

/* 点击样式 */
.click {
   color: #FF5703;
   border-left: 5rpx solid #FF5703;
}

/* 左侧 结束 */

/* 右侧 开始 */

.right {
   flex: 6;
   margin-top: 2vh;
}

/* 分类标题 */
.category-title {
   height: 80rpx;
   display: flex;
   justify-content: center;
}

/* 标题符号 */
.title-symbol {
   color: #ccc;
   padding: 0 10rpx;
}

/* 单个商品 开始 */

/* 整体 */
.goods {
   display: flex;
   flex-wrap: wrap;
   width: 33.33%;
   height: 20vh;
   float: left;
   justify-content: center;
}

.goods navigator {
   /* width: 100%; */
   text-align: center;
}

/* 商品图片 */
.goods image {
   width: 15vw;
   height: 15vw;
   
}

