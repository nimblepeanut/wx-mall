page {
   background-color: #dedede;
   padding: 20rpx;
}

.search_row {
   width: 95vw;
   height: 60rpx;
   display: flex;
   /* margin-top: 9.5vh; */
}

.search_row input {
   background-color: #fff;
   flex: 1;
   height: 100%;
   padding-left: 30rpx;
}

.search_row button {
   width: 110rpx;
   height: 100%;
   padding: 0;
   margin: 0 10rpx;
   display: flex;
   justify-content: center;
   align-items: center;
   font-size: 26rpx;
}

.search_content {
   width: 95vw;
   margin-top: 30rpx;
}

/* 地址列表 开始 */

.search_content .search_item {
   background-color: #fff;
   font-size: 26rpx;
   padding: 15rpx 10rpx;
   border-bottom: 1rpx solid #ccc;
   overflow: hidden;
   white-space: nowrap;
   text-overflow: ellipsis;
   margin-bottom: 1vh;
}

