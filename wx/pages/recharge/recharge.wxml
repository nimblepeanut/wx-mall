<!-- 背景图片 开始 -->

<view>

   <image mode="aspectFill" class="background" src="https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fimg.ixintu.com%2Fdownload%2Fjpg%2F201912%2Fbaaafb492ea001f281f2cc8214fabf9a.jpg%21con0&refer=http%3A%2F%2Fimg.ixintu.com&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=auto?sec=1654953565&t=40583ffab358ee9bb1e2f86eae229140">
   </image>

