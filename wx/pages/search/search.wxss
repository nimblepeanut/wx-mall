page {
   background-color: #dedede;
   padding: 20rpx;
 }
 .search_row {
    width: 95vw;
   height: 60rpx;
   display: flex;
 }
 .search_row input {
   background-color: #fff;
   flex: 1;
   height: 100%;
   padding-left: 30rpx;
 }
 .search_row button {
   width: 110rpx;
   height: 100%;
   padding: 0;
   margin: 0 10rpx;
   display: flex;
   justify-content: center;
   align-items: center;
   font-size: 26rpx;
 }
 .search_content {
    width: 95vw;
   margin-top: 30rpx;
 }
 .search_content .search_item {
   margin-bottom: 1vh;
   background-color: #fff;
   font-size: 26rpx;
   padding: 15rpx 10rpx;
   border-bottom: 1rpx solid #ccc;
   overflow: hidden;
   white-space: nowrap;
   text-overflow: ellipsis;
 }

/* 图片 */
image {
   float: left;
   width: 25vw;
   height: 25vw;
   margin-left: 5vw;
}

/* 整体 */
.whole {
   float: left;
   margin-left: 5vw;
}

/* 名称 */
.name {
   margin-top: 1vh;
   font-size: 21px;
}

/* 价格 */
.price {
   margin-top: 5vh;
   margin-bottom: -1vh;
   font-size: 21px;
   color: #FF5703;
}

 /* 符号 */
 .symbol {
   float: left;
   font-size: 17px;
   padding-top: 0.8vh;
}

 /* 库存 */
 .count {
    color: rgb(168, 168, 168);
    font-size: 17px;
    padding-top: 1.3vh;
    padding-left: 32vw;
    margin-top: -5vh;
 }






 